    <script>
      window.onload = function () {
        // Theme configuration
        const isDarkMode = true;
        
        // Initialize Swagger UI
        const ui = SwaggerUIBundle({
          url: '/api/openapi.json',
          dom_id: '#swagger-ui',
          presets: [SwaggerUIBundle.presets.apis, SwaggerUIStandalonePreset],
          layout: 'StandaloneLayout',
          deepLinking: true,
          displayOperationId: false,
          defaultModelsExpandDepth: 0,
          defaultModelExpandDepth: 0,
          displayRequestDuration: true,
          filter: false,
          operationsSorter: (a, b) => a.get('path').localeCompare(b.get('path')),
          tagsSorter: 'alpha',
          validatorUrl: null,
          
          // Enhanced completion callback
          onComplete: function () {
            // Welcome notification with improved styling
            Swal.fire({
              title: 'üöÄ Selamat Datang di Vrypt API!',
              html: `
                <div style="text-align: left; margin-top: 16px;">
                  <p style="margin-bottom: 12px;">Platform dokumentasi API terlengkap untuk developer Indonesia!</p>
                  <ul style="margin-left: 20px; color: #6B7280;">
                    <li>‚úÖ API Endpoints Gratis & Terpercaya</li>
                    <li>üìö Dokumentasi Lengkap & Mudah Dipahami</li>
                    <li>‚ö° Response Cepat & Stabil</li>
                    <li>üîÑ Update Berkala</li>
                  </ul>
                  <p style="margin-top: 16px; font-size: 14px; color: #9CA3AF;">
                    Mulai eksplorasi API endpoints dan integrasikan ke dalam proyek Anda!
                  </p>
                </div>
              `,
              background: isDarkMode ? '#1F2937' : '#FFFFFF',
              color: isDarkMode ? '#FFFFFF' : '#000000',
              confirmButtonText: 'üéØ Mulai Eksplorasi',
              confirmButtonColor: '#3B82F6',
              showCloseButton: true,
              customClass: {
                popup: 'custom-alert font-sans',
                title: 'text-xl font-bold',
                confirmButton: 'px-6 py-3 text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-all duration-200 font-medium'
              },
              showClass: {
                popup: 'animate__animated animate__fadeInUp animate__faster'
              },
              hideClass: {
                popup: 'animate__animated animate__fadeOutDown animate__faster'
              }
            }).then(result => {
              if (result.isConfirmed) {
                // Scroll to first endpoint
                const firstEndpoint = document.querySelector('.opblock');
                if (firstEndpoint) {
                  firstEndpoint.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
              }
            });

            // Create enhanced top layout
            const topLayout = document.createElement('div');
            topLayout.className = 'top-layout';

            // Enhanced search container
            const searchContainer = document.createElement('div');
            searchContainer.className = 'search-container';
            searchContainer.innerHTML = `
              <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <input type="text" id="enhanced-search-input" placeholder="Cari endpoint, method, atau deskripsi...">
            `;
            topLayout.appendChild(searchContainer);

            // Add scheme container if exists
            const schemeContainer = document.querySelector('.scheme-container');
            if (schemeContainer) {
              topLayout.appendChild(schemeContainer);
            }

            // Insert after info element
            const infoElement = document.querySelector('.information-container');
            if (infoElement) {
              infoElement.after(topLayout);
            }

            // Enhanced search functionality
            const searchInput = document.getElementById('enhanced-search-input');
            let searchTimeout;

            searchInput.addEventListener('input', function (e) {
              const searchTerm = e.target.value.toLowerCase().trim();
              
              // Debounce search
              clearTimeout(searchTimeout);
              searchTimeout = setTimeout(() => {
                performSearch(searchTerm);
              }, 300);
            });

            function performSearch(searchTerm) {
              let totalVisible = 0;
              let totalEndpoints = 0;

              document.querySelectorAll('.opblock-tag').forEach(tag => {
                let hasVisibleOperation = false;
                let tagOperationsCount = 0;
                let tagVisibleCount = 0;

                const operationsContainer = tag.nextElementSibling;
                if (!operationsContainer) return;

                operationsContainer.querySelectorAll('.opblock').forEach(op => {
                  tagOperationsCount++;
                  totalEndpoints++;

                  const path = op.querySelector('.opblock-summary-path')?.textContent?.toLowerCase() || '';
                  const method = op.querySelector('.opblock-summary-method')?.textContent?.toLowerCase() || '';
                  const summary = op.getAttribute('data-summary')?.toLowerCase() || '';

                  const isVisible = searchTerm === '' || 
                                  path.includes(searchTerm) || 
                                  method.includes(searchTerm) || 
                                  summary.includes(searchTerm);

                  op.style.display = isVisible ? 'block' : 'none';
                  
                  if (isVisible) {
                    hasVisibleOperation = true;
                    tagVisibleCount++;
                    totalVisible++;
                  }
                });

                // Update tag visibility and counter
                tag.style.display = hasVisibleOperation ? 'block' : 'none';
                operationsContainer.style.display = hasVisibleOperation ? 'block' : 'none';

                if (searchTerm && hasVisibleOperation) {
                  const tagText = tag.textContent.split('(')[0].trim();
                  const counterSpan = tag.querySelector('span') || tag;
                  counterSpan.textContent = `${tagText} (${tagVisibleCount}/${tagOperationsCount})`;
                } else if (!searchTerm) {
                  const tagText = tag.textContent.split('(')[0].trim();
                  const counterSpan = tag.querySelector('span') || tag;
                  counterSpan.textContent = tagText;
                }
              });

              // Update search input placeholder with results count
              if (searchTerm) {
                searchInput.style.borderColor = totalVisible > 0 ? 'var(--success-color)' : 'var(--error-color)';
                searchInput.setAttribute('placeholder', 
                  totalVisible > 0 
                    ? `Ditemukan ${totalVisible} dari ${totalEndpoints} endpoint` 
                    : 'Tidak ada endpoint yang cocok'
                );
              } else {
                searchInput.style.borderColor = 'var(--border-color)';
                searchInput.setAttribute('placeholder', 'Cari endpoint, method, atau deskripsi...');
              }
            }

            // Store operation summaries for search
            document.querySelectorAll('.opblock').forEach(op => {
              const summary = op.querySelector('.opblock-summary-description')?.textContent || '';
              op.setAttribute('data-summary', summary);
            });

            // Auto-focus search input
            searchInput.focus();

            // Clean up version info
            const removeVersionElements = () => {
              document.querySelectorAll('pre.version').forEach(el => el.remove());
            };
            
            removeVersionElements();
            
            // Re-run cleanup after a delay for dynamic content
            setTimeout(removeVersionElements, 1000);
          },

          // Error handling
          onFailure: function(err) {
            console.error('Swagger UI Error:', err);
            Swal.fire({
              title: '‚ö†Ô∏è Terjadi Kesalahan',
              text: 'Gagal memuat dokumentasi API. Silakan refresh halaman atau coba lagi nanti.',
              icon: 'error',
              confirmButtonText: 'Refresh Halaman',
              confirmButtonColor: '#EF4444'
            }).then(result => {
              if (result.isConfirmed) {
                window.location.reload();
              }
            });
          }
        });

        window.ui = ui;
      };

      // Enhanced keyboard shortcuts
